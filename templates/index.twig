{% extends "_layouts/main" %}

{% block content %}
    <div class="full-bleed-header" style="background-size: 100%; height: 300px; background-image:url(/images/coffee-shop.jpg)">
        <!-- Photo by Nick Hillier on Unsplash -->
        <div class="page-title text-center">
            <h2 class="logo"><span class="scripty">Crafty</span> {{entry.title}}</h2>
            <p class="tagline reverse">{{entry.subtitle}}</p>
            <p><a class="button radius" href="drinks/index.html">See Our Drinks</a> <a class="button radius" href="recipes/index.html">Make Our Drinks</a>

        </div>
    </div>
    <br>
    <div class="row">
        <div class="large-6 small-12 columns">
            <h3>Favorite Drinks</h3>
            
            <div class="large-12 small-12 columns">

                {% set drinks = craft.entries.section('drinks') %}
                {% for item in drinks.limit(5).all() %}
                    <a href="{{item.url}}">
                    <div class="row hp-brew-item" style="background-image:url({{item.drinkImage.one().url}});">
                        <!-- Photo by Nathan Dumlao on Unsplash -->
                        <p class="reverse">{{item.title}}</p>
                    </div>
                    </a>
                    <br>
                {% endfor %}

                {# <a href="">
                <div class="row hp-brew-item" style="background-image:url(/images/drinks/chemex.jpg);">
                <p class="reverse">Perfect Pour-Over</p>
                </div>
                </a>
                <br>
                <a href="">
                <div class="row hp-brew-item" style="background-image:url(/images/drinks/iced-coffee.jpg);">
                <p class="reverse">On the Rocks</p>
                </div>
                </a> #}
            </div>
        </div>
        <div class="large-6 small-12 columns">
            <h3>Latest Coffee News</h3>
            <ul class="news-listing">
                {% set lists = craft.entries.section('news') %}
                {% for list in lists.limit(10).all() %}
                    
                <li><a href="{{list.url}}"> {{ list.excerpt }} </a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
